<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/layout_item">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerInside"
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gamming"
        android:fontFamily="@font/metrophobic_regular"
        />
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSI Stealth GS66 10SE - 407VN"
        android:textSize="12dp"
        android:lines="2"
        android:textStyle="bold"
        android:fontFamily="@font/metrophobic_regular"

        />
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="39.000.000"
        android:textStyle="italic"
        android:textSize="12dp"
        android:textColor="#8C8B8A"
        android:fontFamily="@font/metrophobic_regular"
        />
    <TextView
        android:id="@+id/product_price_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="39.000.000"
        android:textColor="#FFA113"
        android:fontFamily="@font/metrophobic_regular"

        />





</LinearLayout>